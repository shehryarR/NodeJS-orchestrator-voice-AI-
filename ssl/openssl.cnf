[req]
default_bits = 2048
prompt = no
default_md = sha256
distinguished_name = dn
req_extensions = v3_req

[dn]
C = US
ST = CA
L = San Francisco
O = Live Call Server
OU = IT Department
CN = localhost
emailAddress = admin@localhost

[v3_req]
basicConstraints = CA:FALSE
keyUsage = nonRepudiation, digitalSignature, keyEncipherment
subjectAltName = @alt_names

[alt_names]
DNS.1 = localhost
DNS.2 = *.localhost
DNS.3 = localhost
IP.1 = 127.0.0.1
IP.2 = ::1
IP.3 = 192.168.1.100
IP.4 = 10.0.0.100
